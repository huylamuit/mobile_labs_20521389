<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"

   >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Row"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">


            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textColor="#000000"
                android:background="#aa0000"></TextView>

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textColor="#000000"
                android:background="#ffff66"></TextView>

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textColor="#000000"
                android:background="#66ccff"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Column"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="240dp"
            android:textColor="#000000"
            android:orientation="vertical">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#aa0000"></TextView>

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#ffff66"></TextView>

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#66ccff"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="ListView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:weightSum="6"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#aa0000"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#ffff66"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#66ccff"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GridView"
            android:textColor="#000000"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:rowCount="2"
            android:textColor="#000000">

            <TextView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_margin="5dp"
                android:background="#66ccff"
                android:text="Em yeu truong em"
                android:textColor="#000000"></TextView>

            <TextView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_row="0"
                android:layout_column="1"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:background="#66ccff"
                android:text="Voi bao ban than" ></TextView>

            <TextView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:background="#66ccff"
                android:text="Va co giao hien" ></TextView>

            <TextView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_row="1"
                android:layout_column="1"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:background="#66ccff"
                android:text="Nhu yeu que huong" ></TextView>
        </GridLayout>

    </LinearLayout>

</ScrollView>

